        </activity>
        <activity
            android:name=".UserDataActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.ALTERNATIVE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:exported="true">
            <intent-filter>
